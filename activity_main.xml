<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:padding="10dp"
        android:gravity="end|center_vertical|bottom"
        android:background="@color/teal_200"
        android:textSize="48sp"
        android:maxLength="12"
        />

    <!-- first row 7 8 9 / -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/button7"
            android:text="@string/button7"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:backgroundTint="@color/purple_200"
            android:onClick="OnDigit"
            />
        <Button
            android:id="@+id/button8"
            android:text="@string/button8"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:backgroundTint="@color/purple_200"
            android:onClick="OnDigit"
            />
        <Button
            android:id="@+id/button9"
            android:text="@string/button9"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:backgroundTint="@color/purple_200"
            android:onClick="OnDigit"
            />
        <Button
            android:id="@+id/buttonDivide"
            android:text="@string/buttonDivide"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:backgroundTint="@color/purple_200"
            android:onClick="onOperator"
            />

    </LinearLayout>
    <!-- second row 4 5 6 * -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/button4"
            android:text="@string/button4"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:backgroundTint="@color/purple_200"
            android:onClick="OnDigit"
            />
        <Button
            android:id="@+id/button5"
            android:text="@string/button5"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:backgroundTint="@color/purple_200"
            android:onClick="OnDigit"
            />
        <Button
            android:id="@+id/button6"
            android:text="@string/button6"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:backgroundTint="@color/purple_200"
            android:onClick="OnDigit"
            />
        <Button
            android:id="@+id/buttonMultiply"
            android:text="@string/buttonMultiply"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:backgroundTint="@color/purple_200"
            android:onClick="onOperator"
            />

    </LinearLayout>
    <!-- third row 1 2 3 - -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/button1"
            android:text="@string/button1"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:backgroundTint="@color/purple_200"
            android:onClick="OnDigit"
            />
        <Button
            android:id="@+id/button2"
            android:text="@string/button2"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:backgroundTint="@color/purple_200"
            android:onClick="OnDigit"
            />
        <Button
            android:id="@+id/button3"
            android:text="@string/button3"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:backgroundTint="@color/purple_200"
            android:onClick="OnDigit"
            />
        <Button
            android:id="@+id/buttonMinus"
            android:text="@string/buttonMinus"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:backgroundTint="@color/purple_200"
            android:onClick="onOperator"
            />

    </LinearLayout>
    <!-- fourth row . 0 Clear + -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/buttonDecimal"
            android:text="@string/buttonDecimal"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:backgroundTint="@color/purple_200"
            />
        <Button
            android:id="@+id/button0"
            android:text="@string/button0"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:backgroundTint="@color/purple_200"
            android:onClick="OnDigit"
            />
        <Button
            android:id="@+id/buttonClear"
            android:text="@string/buttonClear"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:backgroundTint="@color/purple_200"
            />
        <Button
            android:id="@+id/buttonPlus"
            android:text="@string/buttonPlus"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:backgroundTint="@color/purple_200"
            android:onClick="onOperator"
            />

    </LinearLayout>
    <!-- fifth row = -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/buttonEqual"
            android:text="@string/buttonEqual"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:backgroundTint="@color/purple_200"
            />

    </LinearLayout>


</LinearLayout>